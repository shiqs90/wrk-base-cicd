{
  "dashboard": {
    "id": null,
    "title": "Infrastructure Monitoring Dashboard",
    "tags": ["infrastructure"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Services Status",
        "type": "stat", 
        "targets": [
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus",
            "refId": "A"
          },
          {
            "expr": "up{job=\"grafana\"}",
            "legendFormat": "Grafana",
            "refId": "B"
          },
          {
            "expr": "up{job=\"node-exporter\"}",
            "legendFormat": "System Monitor",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "System Load Average",
        "type": "stat",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1min",
            "refId": "A"
          },
          {
            "expr": "node_load5", 
            "legendFormat": "5min",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "decimals": 2
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 6}
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
            "legendFormat": "Used Memory",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "bytes",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1000000000},
                {"color": "red", "value": 2000000000}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 6}
      },
      {
        "id": 4,
        "title": "Network Activity",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m])",
            "legendFormat": "Receive",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "Bps"
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 6}
      },
      {
        "id": 5,
        "title": "Monitoring Targets Health",
        "type": "table",
        "targets": [
          {
            "expr": "up",
            "format": "table",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 12}
      }
    ],
    "time": {"from": "now-5m", "to": "now"},
    "refresh": "10s"
  }
}